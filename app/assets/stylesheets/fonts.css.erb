/* --------------------------- */
/* --- Fonts and Typography--- */
/* --------------------------- */

body {
  color: #000000; font: 13px/20px Helvetica, sans-serif;
}
h1, h2, h3, h4, h5, .lobster {
  font-family: 'Lobster', cursive; color: #FFFFFF;
}
h1 {
  font-size: 30px; line-height: 30px; margin: 20px 0 25px 0; text-align: center;
  text-shadow: 0 2px 1px rgba(0, 0, 0, 0.3);
}
h2 {
  font-size: 16px; line-height: 20px; margin: 0 0 22px 0;
}
h3 {
  font-size: 15px; line-height: 20px; margin: 0 0 21px 0;
}
h4 {
  font-size: 14px; line-height: 20px; margin-bottom: 5px;
}
h5 {
  font-size: 13px; line-height: 20px; margin-bottom: 0px;
}
p {
  margin-bottom: 20px;
}
a {
  text-decoration: none;
}

