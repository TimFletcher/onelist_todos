/* --------------------- */
/* --- Global Styles --- */
/* --------------------- */

html {
  background: #3A6682 url(<%= asset_path 'bg_noise.png' %>);
}
#main {
  margin: 0 auto; position: relative;
}
header {
  background-color: #352607; height: 40px; color: #CCCCCC;
}
#page-title {
  font-family: Lobster; font-size: 20px; color: #FFFFFF;
  position: absolute; left: 50%; margin-left: -200px; width: 400px;
  display: block; text-align: center; padding: 10px 0 0 0;
  text-shadow: 0 2px 1px rgba(0, 0, 0, 0.3);
}
footer {
  text-align: center; font-size: 11px; width: 100%; padding-top: 15px;
  color: #CCCCCC;
}
.logo, .mobile-logo {
  font-family: Lobster; font-size: 28px; line-height: 28px; color: #FFFFFF;
  background-color: #35260D; margin: 5px 0 0 5px; float: left;
  text-shadow: 0 2px 1px #000000;
}
.mobile-logo {
  display: none; margin-top: 9px;
}
a.logo:hover {
  color: #FFFFFF;
}
#flash-messages {
  margin: 0;
}
#flash-messages li {
  position: absolute; width: 100%; top: 0; font-weight: bold; z-index: 20;
  list-style-type: none; text-align: center; height: 30px; padding-top: 10px;
  color: #333333;
}
.message-notice {
  background-color: #F7F4D1;
}
.message-alert {
  background-color: #F7C2C4;
}
#content {
  color: #CCCCCC;
  text-shadow: 0 2px 0 #222222;
}
#content p.no-margin {
  margin: 0;
}
#content a:hover {
  text-decoration: underline;
}
#container {
  width: 400px; margin: 0 auto; background: #3A6682 url(<%= asset_path 'bg_noise.png' %>);
  min-height: 250px;
}
.transparent {
  text-align: center; background-image: url(<%= asset_path 'black-trans-30.png' %>);
  margin-bottom: 20px; padding: 10px;
}
.transparent a {
  color: #EEEEEE; font-weight: bold;
}
.rounded-2 {
  -webkit-border-radius: 2px;
     -moz-border-radius: 2px;
          border-radius: 2px;
}
.rounded-3 {
  -webkit-border-radius: 3px;
     -moz-border-radius: 3px;
          border-radius: 3px;
}
.rounded-4 {
  -webkit-border-radius: 4px;
     -moz-border-radius: 4px;
          border-radius: 4px;
}
.rounded-6 {
  -webkit-border-radius: 6px;
     -moz-border-radius: 6px;
          border-radius: 6px;
}
.box-shadow {
  -webkit-box-shadow: 0 1px 3px #222222;
     -moz-box-shadow: 0 1px 3px #222222;
          box-shadow: 0 1px 3px #222222;
}

@media only screen and (max-width: 480px) {
  html {
    -webkit-text-size-adjust:none;
    -ms-text-size-adjust:none; 
  }
  .mobile-margin {
    margin: 0 10px 0 10px;
  }
}

/* ----------------------- */
/* --- Navigation Menu --- */
/* ----------------------- */

nav {
  cursor: pointer; position: absolute; right: 0; z-index: 10;
}
nav a {
  display: none; padding: 5px 10px; background-color: #352607;
  background-color: #2A1E05;
}
nav a:hover, nav form input:hover {
  background-color: #140E02; color: #FFFFFF;
}
nav a:last-child {
  border-bottom-left-radius: 4px;
}
nav form {
  width: auto; padding: 0; line-height: 1em; background-color: #2A1E05;
  display: none;
}
nav form input {
  background-color: #2A1E05; border: none; padding: 8px 10px; width: 100%;
  color: #CCCCCC; text-align: left; -webkit-appearance: none;
}
nav span {
  background: url(<%= asset_path 'icon-arrow.png' %>) 100% 10px no-repeat;
  padding: 2px 13px 0 0; float: right;
}
#header-nav {
  position: absolute; right: 0; top: 0;
}
#toggle-nav {
    background: #352607 url(<%= asset_path 'black-trans-20.png' %>);
    padding: 8px 10px 8px 7px; margin: 0; min-width: 105px; display: block; overflow: hidden;
}
#toggle-nav:hover {
  color: #FFFFFF;
}
#toggle-nav img {
  float: left; display: block; padding: 2px; border: 1px solid #443109;
  background-color: #533C0B; margin-right: 6px;
}
.mobile {
  display: none;
}

@media only screen and (max-width: 480px) {
  .logo {
    display: none;
  }
  .mobile-logo {
    display: inline;
  }
  #toggle-nav {
      padding: 13px 9px;
  }
  nav a {
    display: none; padding: 8px 12px;
  }
  nav form input {
    padding: 11px 12px;
  }
  .mobile {
    display: block;
  }
}

/* ------------- */
/* --- Forms --- */
/* ------------- */

form {
  width: 250px; margin: 0 auto;
}
label {
  display: block;
}
label.focus {
  opacity: 0.5;
  -webkit-transition-duration: 0.15s;
}
label.has-text {
  opacity: 0.0;
}
.input {
  margin: 0 0 10px 0;
  position: relative; background: url(<%= asset_path 'black-trans-30.png' %>);
}
.input:focus {
  border: none;
}
.input label {
  position: absolute; padding: 7px 9px 7px 11px; color: #999; display: block;
  z-index: 1;
}
.input input, .input textarea, .input select {
  border: none; outline: none; background: transparent; font: inherit;
  width: 91%;
  color: #DDDDDD; padding: 7px 10px; -webkit-appearance: none;
}
input:-webkit-autofill {
  border-radius: 3px;
  color: #333333 !important;
}
.checkbox {
  margin: 0 auto 10px auto; width: 145px;
}
.checkbox label {
  float: right; color: #CCCCCC; width: 125px;
}
.checkbox input {
  float: left; margin: 5px 0 0 0;
}
#form-level-error {
  color: #CCCCCC; background-color: #CD0D0F; line-height: 1em; text-align: center;
  padding: 2px 5px; display: block; margin: 0 auto 10px auto; width: 200px;
  text-shadow: #222222 0px 1px 0px;
}
.fieldError {
  color: #FFFFFF; position: absolute; right: 6px; top: 6px; margin: 0;
  background-color: #CD0D0F; padding: 4px 5px 5px 5px; line-height: 1em;
}
.fieldError li {
  list-style-type: none;
}
#submit {
  background-color: #DDDDDD; border: none; padding: 6px 0 8px 0;
  text-shadow: #EEEEEE 0px 1px 0px; width: 100%; font-family: Lobster;
  font-size: 16px; color: #333333;
  -webkit-appearance: none;
}
#submit:hover {
  background-color: #FFFFFF;
}
#sidebar {
  position: absolute; top: 60px; left: 20px; width: 250px;
}
#sidebar div {
  padding: 10px; margin-bottom: 20px; color: #BBBBBB; 
  background: url(<%= asset_path 'black-trans-30.png' %>);
}
#sidebar h2 {
  margin-bottom: 10px; color: #DDDDDD;
}
#sidebar ul {
  list-style-type: none; margin: 0;
}
#pay_link_form {
  margin: 15px auto 0 auto; width: 280px;
}
#pay-link {
  padding: 10px; color: #EEEEEE; display: block; text-align: center;
  background: url(<%= asset_path 'black-trans-30.png' %>); border: none;
  width: 100%; font-size: 15px; line-height: 22px;
  box-shadow: 0px 0px 10px rgba(255, 0, 0, 0.7);
}
#pay-link:hover {
  box-shadow: 0px 0px 10px rgba(255, 0, 0, 1); color: #FFFFFF; display: block;
}
#back-button {
  display: none;
}
body:after { /* Image preloading */
  content: url(<%= asset_path 'ajax-loader.gif' %>)
           url(<%= asset_path 'icon-checkbox-checked.png' %>)
           url(<%= asset_path 'icon-checkbox-unchecked.png' %>);
  display: none;
}

@media only screen and (max-width: 950px) {
  #sidebar {
    display: none;
  }
}
@media only screen and (max-width: 480px) {
  #container {
    width: 100%;
  }
  #flash-messages li {
    height: 35px; padding-top: 15px;
  }
  form {
    width: auto;
  }
  form.edit_user, form.new_session, form.password_reset, form.new_user {
    margin: 10px;
  }
  .input label {
    padding-top: 15px; font-size: 16px;
  }
  .input input, .input textarea, .input select {
    padding: 15px 10px; display: block; font-size: 16px;
  }
  .checkbox {
    width: 160px; margin-bottom: 13px;
  }
  .checkbox label {
    width: 140px; font-size: 14px; margin-top: 3px;
  }
  #submit {
    padding-top: 8px; padding-bottom: 11px; font-size: 24px;
  }
  footer {
    padding-top: 16px; margin: 0 0 10px 0; font-size: 14px;
  }
}
